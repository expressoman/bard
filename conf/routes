# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Handled by client side code
GET         /                                                             com.gu.bard.api.Application.index

# Healthcheck
GET        /healthcheck                                                   com.gu.bard.api.Application.healthcheck

# API
GET        /api/pages                                                     com.gu.bard.api.PageInsightsApi.getPages
GET        /api/page-insights/:pageName                                   com.gu.bard.api.PageInsightsApi.getpageInsights(pageName, from, to)

# Auth
GET         /login                                                        com.gu.bard.api.Auth.login
GET         /oauth2callback                                               com.gu.bard.api.Auth.oauth2Callback


# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                                                  controllers.Assets.versioned(path="/public", file: Asset)